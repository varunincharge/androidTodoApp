<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:gravity="left|center"
    android:layout_width="wrap_content" android:paddingBottom="10px"
    android:paddingTop="5px" android:paddingLeft="5px">
    <TextView android:id="@+id/itemText" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:gravity="center"
        android:textColor="#000000"
        android:text="hi"></TextView>
    <TextView android:text="@+id/itemDueDate" android:id="@+id/itemDueDate"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="20px" android:textColor="#0099CC"></TextView>
    <TextView android:text="Medium" android:id="@+id/itemPriority"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="20px" android:textColor="#FF0000"></TextView>
</LinearLayout>
